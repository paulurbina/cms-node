<div class="row">

    <div class="col-sm-8">
        <div class="col-lg-12">
            <h1 class="mt-4">{{post.title}}</h1>
            <p class="lead">
                by:
                <a href="">admin</a>
            </p>
            <hr>
            <p>Posted on {{post.creationDate}}</p>
            <hr>
            <img class="img-fluid rounded" src="{{post.file}}" alt="">
            <hr>
            <p class="lead">
                {{post.description}}
            </p>
            <blockquote class="blockquote">
                <p class="mb-8">Lorem ipsum dolor sit, amet consectetur adipisicing elit</p>
                <footer class="blockquote-footer">
                    <cite title="source title">Source Title</cite>
                </footer>
            </blockquote>
            <hr>
        </div>
        <div class="card my-4">
            <div class="card-header">
                <h5>Leave Comment</h5>
            </div>
            <div class="card-body">
                <form action="">
                    <div class="form-group">
                        <textarea name="" id="" class="form-control" cols="30" rows="4"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>


        <!--single comments -->
        <div class="media mb-4">
            <img src="https://placeimg.com/64/64/people" class="d-flex mr-3 rounded-circle" alt="">
            <div class="media-body">
                <h5 class="mt-0">Media heading</h5>
                <p>Lorem ipsum, dolor sit amet consectetur adipisicing elit. Expedita qui sequi facere, itaque reiciendis </p>
            </div>
        </div>
    </div>


