<div class="container">
    <div class="row">

        <div class="col-md-6 offset-md-3">
            <div class="alert alert-secondary text-center" role="alert">
                Edit Post <strong>'{{post.title}}'</strong>
            </div>
            <form method="POST" action="/admin/posts/edit/{{post._id}}?newMethod=PUT">
                <div class="form-group">
                    <label for="exampleInputEmail1">Title Blog</label>
                    <input type="text" name="title" class="form-control" id="title" value="{{post.title}}"
                        placeholder="Enter to title">

                </div>
                <!--revisar select in edit -->
                <div class="form-group">
                    <label for="status">Status</label>
                    <select name="status" id="status" class="form-control">
                        <option value="public">Public</option>
                        <option value="private">Private</option>
                        <option value="draft">Draft</option>
                    </select>   
                </div>  

                 <div class="form-group">
                    <label for="status">Category</label>
                    <select name="category" id="category" class="form-control">
                        {{#select post.category}}
                            {{#each cats}}
                                <option value="{{_id}}">{{title}}</option>
                            {{/each}}
                        {{/select}}
                    </select>
                </div>
                
                <div class="form-group">
                    <label for="content">Content</label>
                    <textarea class="form-control" id="description" name="description" placeholder="Enter to text" rows="5">{{post.description}}</textarea>
                </div>

                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="allowComments" name="allowComments" checked="{{post.allowComments}}">
                    <label class="form-check-label" for="exampleCheck1">Allow Comments</label>
                </div>
                <button type="submit" class="btn btn-warning btn-block">Edit Post</button>
            </form>
        </div>
    </div>
</div>