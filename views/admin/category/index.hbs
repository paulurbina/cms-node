<div class="container">
    <div class="alert alert-primary text-center" role="alert">
        <strong>
            <h4> All Categoires</h4>
        </strong>
    </div>
    <div class="row">
        <div class="col-6 mx-auto">
            <table class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Title</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody class="table-hover category-list">
                    {{#each category}}
                        <tr>
                            <td>{{title}}</td>
                            <td class="d-flex justify-center-content">
                                <a href="/admin/category/{{_id}}" class="btn btn-warning btn-sm mr-1">Edit</a>
                                <form action="/admin/category/{{_id}}?newMethod=DELETE" method="post">
                                    <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                                </form>
                            </td>
                        </tr>
                    {{/each}}

                </tbody>
            </table>
        </div>
    </div>

    <hr>

    <div class="row">
        <div class="col-md-10 offset-md-1">
            <form id="form-category" action="/admin/category/create" method="POST">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="category-title" name="title" placeholder="Enter Title"><br>
                    <button type="submit" id="create-category-button" class="btn btn-outline-success btn-sm">Create Category</button>
                </div>
            </form>
        </div>
    </div>
</div>