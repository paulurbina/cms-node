<div class="row">
    <div class="container">
        <div class="alert alert-info" role="alert">
            <h3 class="text-center">All Comments</h3>
        </div>
        <div class="col-md-12">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Publisher</th>
                        <th scope="col">Approve Comments</th>
                        <th scope="col">Time</th>
                        <th scope="col">Comment Body</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each comments}}
                     <tr>
                        <td style="width: auto;">{{user.firstName}} {{user.lastName}}</td>
                        <td>{{commentIsAproved}}</td>
                        <td>{{date}}</td>
                        <td>{{body}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>